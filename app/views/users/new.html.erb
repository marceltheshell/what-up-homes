<h4>Sign Up</h4>
<div class="wrapper">
    <%= form_for @user do |form| %>
    <div class="field">
        <%= form.email_field :email, placeholder: "Email", required: true %> <br>
        <%= form.password_field :password, placeholder: "Password", required: true %>
        </div>
        <br>
    <%= form.submit "Sign Up!",  :class => 'button' %>
    <% end %>
</div>