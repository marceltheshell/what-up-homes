<h4>login</h4>
<div class="wrapper">
	<div class="field">
		<%= form_tag login_user_path, method: :post do %>

			<%= text_field_tag :email, nil, required: true, placeholder: "email" %> <br>
			<%= password_field_tag :password, nil, required: true, placeholder: "password" %>
			<%= submit_tag "Login" %>

		<% end %>
	</div>
</div>